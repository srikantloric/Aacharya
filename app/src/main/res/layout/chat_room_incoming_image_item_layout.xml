<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="start"
    android:orientation="vertical">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/sender_image"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:src="@drawable/director_sample">

    </de.hdodenhof.circleimageview.CircleImageView>

    <TextView
        android:id="@+id/sender_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:layout_toRightOf="@+id/sender_image"
        android:text="Jhon Doe"></TextView>

    <ImageView
        android:id="@+id/incoming_image_item"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:layout_below="@+id/sender_image"
        android:layout_marginStart="10dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="50dp"
        android:background="#2C8AAA"
        android:scaleType="center"
        android:src="@drawable/logo_aacharya">

    </ImageView>

    <TextView
        android:id="@+id/incoming_time_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/incoming_image_item"
        android:layout_marginLeft="10dp"

        android:layout_marginRight="50dp"
        android:layout_marginBottom="5dp"
        android:text="05:03pm"
        android:textSize="9sp"

        ></TextView>

</RelativeLayout>